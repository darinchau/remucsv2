{
    "name": "hyperparameter-sweep",
    "method": "bayes",
    "metric": {
        "name": "Val SNR",
        "goal": "maximize"
    },
    "run_cap": 100,
    "parameters": {
        "autoencoder_lr": {
            "distribution": "log_uniform",
            "min": -6,
            "max": -3
        },
        "batch_size": {
            "values": [
                1,
                2,
                4,
                8
            ]
        },
        "codebook_size": {
            "values": [
                1024,
                2048,
                4096,
                8192
            ]
        },
        "nquantizers": {
            "values": [
                2,
                4,
                8
            ]
        },
        "commitment_beta": {
            "distribution": "uniform",
            "min": 0.01,
            "max": 0.3
        },
        "entropy_weight": {
            "distribution": "uniform",
            "min": 0.001,
            "max": 0.05
        },
        "num_down_layers": {
            "values": [
                1,
                2,
                3
            ]
        },
        "num_up_layers": {
            "values": [
                1,
                2,
                3
            ]
        }
    }
}